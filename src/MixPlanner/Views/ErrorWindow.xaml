<Window x:Class="MixPlanner.Views.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mp="clr-namespace:MixPlanner.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Oops"
        Height="300" 
        Width="600"
        d:DataContext="{d:DesignInstance mp:ErrorWindowViewModel}">
    <StackPanel Orientation="Vertical">
        
        <TextBlock Margin="10,10,0,0" 
                   TextWrapping="NoWrap" 
                   Text="{Binding Message}" 
                   VerticalAlignment="Top"
                   FontFamily="Courier New,"/>

        <TextBox
            HorizontalAlignment="Left" 
                 Height="188" 
                 TextWrapping="Wrap" 
                 Text="{Binding StackTrace}" 
                 VerticalAlignment="Top"
                 FontFamily="Consolas, Courier New, Courier"/>
        
        <Button Content="OK"  
                Height="32"
                Width="75"
                Command="Close"/>


    </StackPanel>
</Window>
